<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

 <div class="row mt-4">
  <div class="col-md-6">
    <h3></h3>
        {{!-- <div class="form-group">
        <button type="submit" class="btn btn-primary">Address Book</button>
      </div> --}}
          <div class="form-group">
        <button type="submit" class="btn btn-primary">Grocery List</button>
      </div>
          <div class="form-group">
        <button type="submit" class="btn btn-primary">Event List</button>
      </div>

    <form class="form new-grocery-form">
      <div class="form-group">
        <label for="grocery-name">Name:</label>
        <input class="form-input" type="text" id="grocery-name" name="grocery-name" />
      </div>
      <div class="form-group">
        <label for="grocery-address">Address:</label>
        <input class="form-input" type="number" id="grocery-address" name="grocery-address" />
      </div>
      <div class="form-group">
        <label for="grocery-desc">Phone Number:</label>
        <textarea class="form-input" id="grocery-desc" name="grocery-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  {{#if addresses.length}}
  <div class="col-md-6 grocery-list">
    <h3>Current Addresses:</h3>

    {{#each addresses as |address|}}
    <div classqui="row mb-2">
      <div class="col-md-8">
        <h4><a href="/address/{{address.id}}">{{address.Name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{address.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/address.js"></script>