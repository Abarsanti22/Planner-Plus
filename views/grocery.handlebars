<div class="row">
  <div class="col-auto">
    <h2>Grocery List</h2>
  </div>
</div>

 <div class="row mt-4">
  <div class="col-md-6">
    <h3></h3>
         <div class="form-group">
           <a href="/api/addresses">
           <button type="submit" class="btn btn-primary">Address Book</button>
          </a>
          {{!-- <div class="form-group">
        <button type="submit" class="btn btn-primary">Grocery List</button>
      </div> --}}
      <div class="form-group">
             <a href="/api/projects">
        <button type="submit" class="btn btn-primary">Event List</button>
        </a>

    <form class="form new-grocery-form">
      <div class="form-group">
        <label for="grocery-name">Item name:</label>
        <input class="form-input" type="text" id="grocery-name" name="grocery-name" />
      </div>
      <div class="form-group">
        <label for="grocery-address">Quantity:</label>
        <input class="form-input" type="number" id="grocery-address" name="grocery-address" />
      </div>
      {{!-- <div class="form-group">
        <label for="grocery-desc">Phone Number:</label>
        <textarea class="form-input" id="grocery-desc" name="grocery-desc"></textarea>
      </div> --}}
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  {{#if grocerys.length}}
  <div class="col-md-6 grocery-list">
    <h3>Current grocerys:</h3>

    {{#each grocerys as |grocery|}}
    <div classqui="row mb-2">
      <div class="col-md-8">
        <h4><a href="/grocery/{{grocery.id}}">{{grocery.itemName}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{grocery.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/grocery.js"></script>


